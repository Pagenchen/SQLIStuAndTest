<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pagen.dao.SysMenuDao">
    <resultMap id="BaseResultMap" type="com.pagen.entity.SysMenu">
        <result column="id" jdbcType="INTEGER" property="id"/>
        <result column="title" jdbcType="VARCHAR" property="title"/>
        <result column="href" jdbcType="VARCHAR" property="href"/>
        <result column="pid" jdbcType="INTEGER" property="pid"/>
        <result column="icon" jdbcType="VARCHAR" property="icon"/>
        <result column="target" jdbcType="VARCHAR" property="target"/>
        <result column="sort" jdbcType="INTEGER" property="sort"/>
        <result column="status" jdbcType="INTEGER" property="status"/>
        <result column="remark" jdbcType="VARCHAR" property="remark"/>
        <result column="create_at" jdbcType="DATE" property="create_at"/>
        <result column="update_at" jdbcType="DATE" property="update_at"/>
        <result column="delete_at" jdbcType="DATE" property="delete_at"/>
    </resultMap>
    <!--查询系统菜单条目-->
    <select id="findAllByStatusOrderBySort" resultType="com.pagen.entity.SysMenu" resultMap="BaseResultMap">
        select * from permission_security.system_menu where status=#{status}
    </select>
    <!--查询系统菜单条目-->
    <select id="getMenusByID" resultType="com.pagen.entity.SysMenu" resultMap="BaseResultMap">
        select * from system_menu where id=#{id}
    </select>

    <insert id="addPage" parameterType="SysMenu">
        insert into system_menu
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="pid != null">
                pid,
            </if>
            <if test="title != null">
                title,
            </if>
            <if test="target != null">
                target,
            </if>
            <if test="remark != null">
                remark,
            </if>
            <if test="href != null">
                href,
            </if>
            <if test="icon != null">
                icon,
            </if>
            <if test="status != null">
                status,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="pid != null">
                #{pid},
            </if>
            <if test="title != null">
                #{title},
            </if>
            <if test="target != null">
                #{target},
            </if>
            <if test="remark != null">
                #{remark},
            </if>
            <if test="href != null">
                #{href},
            </if>
            <if test="icon != null">
                #{icon},
            </if>
            <if test="status != null">
                #{status},
            </if>
        </trim>

    </insert>

    <update id="updatePage" parameterType="SysMenu">
        update system_menu set
        <trim suffixOverrides=",">
            <if test="title != null">
                title = #{title},
            </if>
            <if test="target != null">
                target = #{target},
            </if>
            <if test="remark != null">
                remark = #{remark},
            </if>
            <if test="href != null">
                href = #{href},
            </if>
            <if test="icon != null">
                icon = #{icon},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
        </trim>
        WHERE id = #{id}
    </update>

    <delete id="deleteMenu">
        delete from system_menu where id = #{id}
    </delete>

</mapper>